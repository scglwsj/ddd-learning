{
    "name": "parking",
    "version": "1.0.0",
    "description": "learn DDD by parking in TypeScript",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "lint": "eslint src --fix --ext .ts,.tsx",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/scglwsj/ddd-learning.git"
    },
    "keywords": [
        "DDD"
    ],
    "author": "scglwsj",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/scglwsj/ddd-learning/issues"
    },
    "homepage": "https://github.com/scglwsj/ddd-learning#readme",
    "devDependencies": {
        "@types/jest": "^25.1.3",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "eslint": "^6.8.0",
        "eslint-config-alloy": "^3.6.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jest": "^25.1.0",
        "prettier": "^1.19.1",
        "ts-jest": "^25.2.1",
        "typescript": "^3.8.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "dependencies": {
        "@types/uuid": "^7.0.0"
    }
}
